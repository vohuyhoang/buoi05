<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./style.css">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  <style>
    table {
      border: 2px solid #0236a7;
    }

    td,
    tr {
      border: 2px solid #0236a7;
      text-align: center;
    }

    th {
      border: 2px solid #0236a7;
      color: #fff;
      background-color: #0236a7;
    }

    img {
      width: 100%;
      height: 100px;
    }

    a {
      text-decoration: none;
      background-color: #ddd;
      color: #000;
      padding: 10px;
      border-radius: 100px;
    }

    .themsanpham {
      margin-bottom: 30px;
      float: right;
    }

    .themsanpham a {
      text-decoration: none;
      background-color: #ddd;
      color: #000;
      padding: 10px;
      border-radius: 100px;
    }

    .pagination {
      margin-top: 30px;
      text-align: center;
    }
  </style>
  <script>
    function confirmDelete() {
      if (confirm("Bạn có chắc muốn xóa sản phẩm này không?")) {
        // continue with form submission
      } else {
        // do nothing
        event.preventDefault(); // prevent form submission
      }
    }
  </script>



  <h2 style="text-align: center;">Danh sách sản phẩm</h2>

  <div class="container">
    <div class="row">
      <div class="col-12">
        <a class="btn btn-primary" href="/courses/add" role="button">Thêm sản phẩm</a>
        <table class="table table-image">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Tên</th>
              <th scope="col">Hình</th>
              <th scope="col">Giá</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% courses.forEach(function(course) { %>
              <tr>
                <td>
                  <%= course.id %>
                </td>
                <td>
                  <%= course.name %>
                </td>
                <td><img src=<%=course.hinh %>></td>
                <td>
                  <%= course.gia %>
                </td>
                <td><a href="/courses/edit/<%= course.id %>">Sửa</a></td>
                <td>
                  <form method="POST" action="/courses/delete/<%= course.id %>">
                    <button type="submit" onclick="confirmDelete()">Xóa</button>
                  </form>

                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="pagination">
    <% if (currentPage> 1) { %>
      <a href="/?page=<%= currentPage - 1 %>">Previous</a>
      <% } %>

        <% for (let i=1; i <=totalPages; i++) { %>
          <% if (i===currentPage) { %>
            <span class="active">
              <%= i %>
            </span>
            <% } else { %>
              <a href="/?page=<%= i %>">
                <%= i %>
              </a>
              <% } %>
                <% } %>

                  <% if (currentPage < totalPages) { %>
                    <a href="/?page=<%= currentPage + 1 %>">Next</a>
                    <% } %>
  </div>

</body>

</html>